chainLinkSize = 84px;
chainLinkOffset = - chainLinkSize / 2;

smallChainLinkSize = 60px;
smallChainLinkOffset = - smallChainLinkSize / 2;

.chainLink
  display: inline-block;
  vertical-align: top;

  &__box
    display: flex;

  &__image
    position: relative
    width: chainLinkSize;
    height: @width;

  &--small &__image
    width: smallChainLinkSize;
    height: @width;

  &__image::before
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: chainLinkOffset;
    margin-left: chainLinkOffset;
    width: chainLinkSize;
    height: @width;
    border-radius: 50%;
    background-color: #3f4381;

  &--small &__image::before
    margin-top: smallChainLinkOffset;
    margin-left: smallChainLinkOffset;
    width: smallChainLinkSize;
    height: @width;

  &__image::after
    content: '';
    display: block;
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center;

  &--musle &__image::after
    background-image: url("../../assets/images/musle.png");
    background-size: 95%;
    transform: rotate(-30deg);

  &--liver &__image::after
    background-image: url("../../assets/images/liver.png");
    background-size: 60px auto;

  &--symbol &__content.flex-column
    padding-bottom: 10px;

  &__content
    display: flex;
    font-family: "Lato", sans-serif;

  &__content.flex-column
    padding-bottom: 20px;

  &__content.flex-column-reverse
    padding-top: 15px;

  &__index
    font-size: 36px;
    line-height: @font-size;
    font-weight: 600;

  &__text
    font-weight: 500;
    font-size: 22px;

  &--small &__text
    font-size: 19px;

  &__box.flex-row-reverse &__text
    text-align: right;
    padding-right: 14px;

  &__symbol
    display: block;
    position: relative;
    height: 100%;
    line-height: 74px;
    font-family: "Lato", sans-serif;
    font-size: 66px;
    font-weight: 700;
    text-align: center;
    z-index: 1;

  &--small &__symbol
    font-size: 36px;
    line-height: smallChainLinkSize;
