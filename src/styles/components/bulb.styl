@keyframes scaling {
  0% { transform: scale(0); }
  100% { transform: scale(1); }
}

@keyframes gradient-fading {
  0% { opacity: 0.6; }
  50% { opacity: 0.5;}
  100% { opacity: 0; }
}

@keyframes stroke-fading {
  0% { opacity: 0; }
  70% { opacity: 1; }
}

.bulb
  position: absolute;
  width: 100%;
  height: @width;

  &__item
    position: absolute;
    width: 100%;
    height: @width;
    border-radius: 50%;
    background-size: 100%;
    animation-duration: 2s;
    animation-timing-function: ease-out;
    animation-iteration-count: infinite;
    transform-origin: center;

  &__item--gradient
    background-image: radial-gradient(#de781b, #cf1437);

  &__item--stroke
    background-image: url("../../assets/images/gradient-stroke.svg");

.bulb--fixed .bulb__item--gradient
  opacity: 0.3;

.bulb--moves + .bulb--moves .bulb__item
  animation-delay: 0.7s;
  animation-fill-mode: backwards;

.bulb--moves .bulb__item--gradient
  animation-name: scaling, gradient-fading;

.bulb--moves .bulb__item--stroke
  animation-name: scaling, stroke-fading;
