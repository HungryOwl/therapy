.arrow
  background-color: white;
  position: absolute;
  height: 2px;
  transform-origin: 0 50%;
  left: 50%;
  top: 50%;

  &::after
    position: absolute;
    content: "";
    top: -2px;
    left: 100%;
    width: 6px;
    height: 0;
    border-top: 3px solid transparent;
    border-left: 10px solid white;
    border-bottom: 3px solid transparent;
