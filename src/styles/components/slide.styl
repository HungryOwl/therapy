.slide
  box-sizing: border-box;
  width: 100%;
  height 100%;
  color: white;

  &__title
    font-weight: 400;
    color: #0d319c;
    font-size: 50px;
    line-height: 60px;

  &__text
    font-family: "Lato", sans-serif;
    font-weight: 400;
    font-size: 20px;
    color: #0d319c;

    &--0
      position: absolute;
      top: 400px;
      left: 225px;

    &--1
      position: absolute;
      top: 510px;
      left: 370px;

    &--2
      position: absolute;
      top: 280px;
      left: 625px;

    &--3
      position: absolute;
      top: 490px;
      left: 790px;

.slide.slide--goals
  padding-top: 140px;
  padding-left: 75px;
  padding-right 75px;
  background-color: #439afd;
  background-image: url("../../assets/images/mountain.jpg");
  background-size: cover;
  background-position: center;

.slide.slide--therapy
  background-image: url("../../assets/images/ice-bg.png"),
                    url("../../assets/images/therapy-bg.jpg");
  background-size: auto, cover;
  background-position: 50% 100px, center;
  background-repeat: no-repeat;
  background-color: #163ab0;
  transition: background-position 0.6s ease;

  .slide__title
    display: inline-block;
    margin-top: 280px;
    padding-left: 220px;
    padding-right: 220px;
    text-align: center;
    font-weight: 300;
    color: white;
    transform: translateY(0);
    transition: transform 0.6s ease;

.slide.slide--active.slide--therapy
  background-position: 50% 0, center;

  .slide__title
    transform: translateY(-80px);

.slide.slide--details
  background-image: url("../../assets/images/details-bg.jpg");

  .slide__title
    margin-left: 84px;
    margin-top: 98px;
    font-size: 30px;
    color: white;

.slide.slide--1988
  background-image: url("../../assets/images/ice-1-bg.png");

.slide.slide--2009
  background-image: url("../../assets/images/ice-2-bg.png");

.slide.slide--2016
  background-image: url("../../assets/images/ice-3-bg.png");
